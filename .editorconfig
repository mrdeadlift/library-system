# EditorConfig configuration for ktlint
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 8
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.gradle]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Test files: Allow wildcard imports for testing frameworks
[{*Test.kt,*Tests.kt,*Spec.kt,*Specs.kt}]
ktlint_standard_no-wildcard-imports = disabled